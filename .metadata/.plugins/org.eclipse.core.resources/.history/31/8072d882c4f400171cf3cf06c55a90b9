package fundModels;

public class WeightedQuickUnionUF {
	private int[] id;	// father node
	private int[] sz;	// number of objects in the tree with single root
	
	public WeightedQuickUnionUF(int N){
		id = new int[N];
		sz = new int[N];
		for(int i:id){
			id[i] = i;
			sz[i] = 1;
		}
	}
	
	private int findRoot(int i){
		while(i != id[i]) i = id[i];
		return i;
	}
	
	
}
